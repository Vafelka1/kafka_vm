COMPOSE_PROJECT_NAME=kafka_vm

# Kafka
KAFKA_IMAGE=bitnami/kafka:3.7
KAFKA_ADVERTISED_HOST=localhost              # Укажите публичный IP/DNS сервера
KAFKA_EXTERNAL_PORT=9094                     # Внешний порт брокера
KAFKA_DATA_VOLUME=kafka_data                 # Имя Docker-тома с данными

# Аутентификация Kafka (SASL/PLAIN только на внешнем listener-е)
KAFKA_SASL_USER=app
KAFKA_SASL_PASSWORD=change-me-strong

# Kafka UI
KAFKA_UI_IMAGE=provectuslabs/kafka-ui:latest
KAFKA_UI_PORT=8080
KAFKA_UI_CLUSTER_NAME=kafka
KAFKA_UI_BASIC_USER=admin
KAFKA_UI_BASIC_PASSWORD=change-me-strong-too


